<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context="com.example.igor.telega.Main">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:textSize="25sp"
            android:textStyle="italic"
            android:layout_weight="1"
            android:text="@string/cscore"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:textSize="25sp"
            android:textStyle="italic"
            android:layout_weight="1"
            android:text="@string/bscore"/>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/layout1"
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:weightSum="2">

        <TextView
            android:id="@+id/currentScore"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:layout_weight="1"
            android:text="@string/cur"/>

        <TextView
            android:id="@+id/bestScore"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="35sp"
            android:layout_weight="1"
            android:text="@string/best"/>

    </LinearLayout>

    <TextView
        android:layout_below="@+id/layout2"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:text="@string/fun"/>

    <Button
        android:id="@+id/start_button"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:background="@drawable/telegram"
        android:paddingLeft="28dp"
        android:textAlignment="gravity" />
        <!--android:paddingTop="30dp" -->

    <TextView
        android:id="@+id/rule"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/start_button"
        android:layout_alignBottom="@+id/start_button"
        android:layout_centerHorizontal="true"
        android:text="@string/rule"
        android:textAlignment="center"
        android:textColor="#0000FF"
        android:textSize="25sp"
        android:visibility="invisible" />

</RelativeLayout>
